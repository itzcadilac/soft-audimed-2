{% extends 'Layouts/main.twig' %} {% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-sm-12 col-lg-12">
                    <div class="iq-card">
                        <div class="iq-card-header d-flex justify-content-between">
                            <div class="iq-header-title">
                                <h4 class="card-title">Nuevo usuario</h4>
                            </div>
                        </div>
                        <div class="iq-card-body">
                            <div class="col-sm-12 col-lg-6">
                                <form id="user_registration_form">
                                    <div class="form-group">
                                        <label for="urf_document_number">NÂ° de documento:</label>
                                        <input type="text" class="form-control" id="urf_document_number"
                                            name="urf_document_number">
                                        {% if errors.num_documento %}
                                        <div class="error">{{ errors.num_documento }}</div>
                                        {% endif %}
                                        <div id="error_num_documento"></div>
                                    </div>
                                    <div class="form-group">
                                        <label for="urf_lastname">Apellidos:</label>
                                        <input type="text" class="form-control" id="urf_lastname" name="urf_lastname">
                                    </div>
                                    <div class="form-group">
                                        <label for="urf_names">Nombres:</label>
                                        <input type="text" class="form-control" id="urf_names" name="urf_names">
                                    </div>
                                    <div class="form-group">
                                        <label for="urf_profile">Perfil</label>
                                        <select class="form-control mb-3" id="urf_profile" name="urf_profile">
                                            {% for profile in profileList %}
                                            <option value="{{ profile.id }}">{{ profile.name }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Registrar</button>
                                </form>
                                <div id="message"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">

    </div>
</div>
{% endblock %}

{% block javascriptAPP %}
<script>
    window.globalConfig = {
        baseUrl: "{{ base_url('/')|e('js') }}"
    };
</script>
<script type="module" src="{{ base_url('assets/js/core/users-module/user-register-controller.js') }}"></script>

{% endblock %}