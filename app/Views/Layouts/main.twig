            sessionUser: {{ session.usuario is defined ? session.usuario|json_encode|raw : 'null' }}
        };

   // Acceso a las variables globales desde AppGlobals
   console.log("Nombre de la aplicaci√≥n:", AppGlobals.appName);
   console.log("API URL:", AppGlobals.apiUrl);

   if (AppGlobals.sessionUser) {
      console.log("Usuario conectado:", AppGlobals.sessionUser.nombre);
   } else {
      console.log("No hay un usuario conectado.");
   }

    </script>

